

bg-image($url, $ext = ".png")
  background-image: url($url + "@2x" + $ext)
  @media (min-resolution: 3dppx)
    background-image: url($url + "@3x" + $ext)
border-top($color)
  position relative
  &:before
    content ''
    width 100%
    height 1px 
    background-color $color
    position absolute
    top 0  
    left 0
border-bottom($color)
  position relative
  &:after
    content ''
    width 100%
    height 1px 
    background-color $color
    position absolute
    bottom 0       